generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  User
  Admin
}

enum PaymentStatus {
  Paid
  Pending
  Cancelled
}

model User {
  id            Int       @id @default(autoincrement())
  identifier    String    @unique // used as email
  password      String
  first_name    String?
  last_name     String?
  gender        String?   // e.g., "Мужской", "Женский"
  birth_date    DateTime? // parsed from 02.11.1992 format
  phone         String?   @unique
  avatar        String?
  role          Role      @default(User)

  orders        Order[]
  feedbacks     Feedback[]
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  description    String
  image          String
  replenishment  Json
  smile_api_game String?  @unique
  feedbacks      Feedback[]
}

model Feedback {
  id            Int        @id @default(autoincrement())
  reaction      Boolean
  text          String
  product_id    Int
  user_id       Int

  product       Product     @relation(fields: [product_id], references: [id])
  user          User        @relation(fields: [user_id], references: [id])
}

model Coupon {
  id            Int     @id @default(autoincrement())
  code          String  @unique
  limit         Int?
  discount      Int
}

model Order {
  id            String  @id @default(uuid())
  price         Decimal
  amount        Int
  type          String
  user_id       Int
  payment       String
  status        PaymentStatus @default(Pending)
  account_id    String?
  server_id     String?
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
  
  user       User     @relation(fields: [user_id], references: [id])
}